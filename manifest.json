{
	"manifest_version": 2,

	"name": "Image Downgrader",
	"description": "This extension reduces the size of images used on webpages, saving you valuable bandwidth and load time",
	"version": "1.0",
	
	"permissions": [
		"tabs",
		"<all_urls>"
	],
	
	"content_scripts" : [
		{
			"matches" : [ 
				"https://*/*",
				"http://*/*"
			],
			"js" : ["contentscript.js"],
			"run_at" : "document_end"
		}
	],
	
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	}
}